{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2023",
    "lib": ["ES2023"],
    "module": "ESNext",
    "types": ["node"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler", //模块解析策略为捆绑器
    "noUncheckedIndexedAccess": false, //关闭for循环索引时 let item= list[index]可能是undefined的报错
    "allowImportingTsExtensions": true, //允许导入带有.ts扩展名的模块
    "verbatimModuleSyntax": true, // 启用逐字模块语法以保留导入和导出语句的原始形式
    "moduleDetection": "force", //强制模块检测以确保所有文件都作为模块处理
    "noEmit": true, //不生成输出文件

    /* Linting */
    "strict": true, //启用所有严格类型检查选项
    "noUnusedLocals": false, //报告未使用的局部变量(开发阶段禁用,生产阶段开启)
    "noUnusedParameters": false, //报告未使用的函数参数(开发阶段禁用,生产阶段开启)
    "erasableSyntaxOnly": true, //仅允许可删除的语法
    "noFallthroughCasesInSwitch": true, //报告switch语句中遗漏的break语句
    "noUncheckedSideEffectImports": true //禁止导入具有副作用的模块，除非它们被使用
    // "strictFunctionTypes": false, //关闭函数参数类型检查
  },
  "include": ["vite.config.ts"]
}
