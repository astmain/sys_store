{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "rootDir": ".",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"], //支持ES2022语法,DOM,DOM.Iterable语法,// 没有 DOM.Iterable 时，这些会报错const elements = document.querySelectorAll('.my-class')
    "paths": {
      "@/*": ["src/*"]
    },
    "types": [
      "vite/client",

      "element-plus/global", //element-plus自动引入
      "@vue-macros/reactivity-transform/macros-global" //类型ReactivityTransform响应式数据$ref省略.value
    ],

    /* Linting */
    "strict": true, //启用所有严格类型检查选项
    "noUncheckedIndexedAccess": false, //关闭for循环索引时 let item= list[index]可能是undefined的报错
    "noImplicitAny": false, //允许any隐式类型(开发阶段禁用,生产阶段开启)
    "noUnusedLocals": false, //报告未使用的局部变量(开发阶段禁用,生产阶段开启)
    "noUnusedParameters": false, //报告未使用的函数参数(开发阶段禁用,生产阶段开启)
    "erasableSyntaxOnly": true, //仅允许可删除的语法
    "noFallthroughCasesInSwitch": true, //报告switch语句中遗漏的break语句
    "noUncheckedSideEffectImports": true //禁止导入具有副作用的模块，除非它们被使用
    // "strictFunctionTypes": false, //关闭函数参数类型检查
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"]
}
